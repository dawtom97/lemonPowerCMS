<%- include('./partials/adminHeader'); %>


<div class="admin__dashboard">
    <%- include('./partials/adminAside'); %>

    <h2>Blog</h2>

    <div>
        <form action="/admin/blog/create/" method="get">
            <button type="submit">Add</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Client</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach((blog) =>{ %>
              
                    <tr>
                        <td>
                            <% blog.category.forEach((cat) =>{%>
                                 <%=cat.name%>
                            <% })%>
                        </td>
                        <td><%=blog.title %></td>
                        <td><td><%=blog.updateDate %></td></td>
                        <td>
                            <a href="/admin/blog/<%=blog._id%>/blog-edit-cover">Cover</a>
                            <a href="/admin/blog/<%=blog._id%>/edit">Edit</a>
                            <a href="/admin/blog/<%=blog._id%>/delete">Delete</a>
                        </td>
                    </tr>
               <% })%>
           
            </tbody>
        </table>
    </div>
</div>



<%- include('./partials/adminFooter'); %>