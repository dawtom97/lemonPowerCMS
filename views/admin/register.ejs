<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/main-admin.css">
    <title>SB Admin 2 - Login</title>
    

</head>

<body >

    <div class="authContainer">

        <div class="authWrapper">
            <div class="alert">
                <% errors.forEach((err) => { %>
                      <p><%= err %></p>
                 <%}) %>
             </div>

             <div class="socialBox">
                <h3>Sign up Admin</h3>
                <div class="socialBox__icons">
                    <a href=""><i class="bi bi-instagram"></i></a>
                    <a href=""><i class="bi bi-linkedin"></i></a>
                    <a href=""><i class="bi bi-github"></i></a>
                </div>
            </div>

        </div>

        <form class="user" action="/admin/register" method="post">
            <div class="form-group row">
                <div>
                    <input name="firstname" type="text" placeholder="First Name">
                </div>
                <div>
                    <input name="lastname" type="text" placeholder="Last Name">
                </div>
            </div>
            <div class="form-group">
                <input name="email" type="email" placeholder="Email Address">
            </div>
            <div class="form-group row">
                <div>
                    <input name="password" type="password" placeholder="Password">
                </div>
                <div>
                    <input name="confirm_password" type="password" placeholder="Repeat Password">
                </div>
            </div>
            <button type="submit">Register</button>


        </form>

        <p class="authLink">Already have an account? <a href="/admin/login">Sign in</a></p>
          
    </div>
    <a class="authBack" href="/"><i class="bi bi-house-door-fill"></i></a>

</body>

</html>