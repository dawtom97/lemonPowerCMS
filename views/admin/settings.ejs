<%- include('./partials/adminHeader'); %>


    <div class="addContent__wrapper">
        <%- include('./partials/adminAside'); %>

            <h3>Edit Settings</h3>

            <div>
                <form action="/admin/settings" method="post" enctype="multipart/form-data">
                    <% if(settings && settings.logo) { %>
                        <div>
                            <img class="settingsPreviewLogo" src="/<%=settings.logo.filename%>" alt="<%=settings.logo.filename%>">
                        </div>
                        <% } %>

                            <div>
                                <label for="">Logo</label>
                                <input name="logo" type="file">
                            </div>


                            <div>
                                <label for="">Instagram URL</label>
                                <br>
                                <input type="text" name="instagram" <% if(settings) { %>
                                value="<%=settings.instagram %>"
                                    <% } %>
                                        >
                            </div>

                            <div>
                                <label for="">Facebook URL</label>
                                <br>
                                <input type="text" name="facebook" <% if(settings) { %>
                                value="<%=settings.facebook %>"
                                    <% } %>
                                        >
                            </div>

                            <div>
                                <label for="">Address first line</label>
                                <br>
                                <input type="text" name="address1" <% if(settings) { %>
                                value="<%=settings.address1 %>"
                                    <% } %>
                                        >
                            </div>

                            <div>
                                <label for="">Address second line</label>
                                <br>
                                <input type="text" name="address2" <% if(settings) { %>
                                value="<%=settings.address2 %>"
                                    <% } %>
                                        >
                            </div>

                            <div>
                                <label for="">Phone</label>
                                <br>
                                <input type="text" name="phone" <% if(settings) { %>
                                value="<%=settings.phone %>"
                                    <% } %>
                                        >
                            </div>

                            <div>
                                <label for="">Email</label>
                                <br>
                                <input type="text" name="email" <% if(settings) { %>
                                value="<%=settings.email %>"
                                    <% } %>
                                        >
                            </div>

                            <div>
                                <label for="">Copyright</label>
                                <br>
                                <input type="text" name="footer" <% if(settings) { %>
                                value="<%=settings.footer %>"
                                    <% } %>
                                        >
                            </div>

                            <button class="saveBtn" type="submit">Save Changes</button>

                </form>
            </div>
    </div>



    <%- include('./partials/adminFooter'); %>